<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlowCoachActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/flowCoachToolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/toolbarFcAvatarImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/flowcoach_content_desc_avatar"
            app:srcCompat="@drawable/imagen_flow_coach" 
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toolbarFcTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flowcoach_title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <TextView
                android:id="@+id/toolbarFcStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flowcoach_status_online"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- El LinearLayout para los campos de API y API Key ha sido eliminado -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/flowCoachToolbar" 
        app:layout_constraintBottom_toTopOf="@+id/suggestionChipsScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <HorizontalScrollView
        android:id="@+id/suggestionChipsScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/messageInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/suggestionChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHowToStart"
                style="@style/Widget.MaterialComponents.Chip.Action" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flowcoach_suggestion_how_to_start" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBeginnerRoutine"
                style="@style/Widget.MaterialComponents.Chip.Action" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flowcoach_suggestion_beginner_routine" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipNutritionTips"
                style="@style/Widget.MaterialComponents.Chip.Action" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flowcoach_suggestion_tips" />
            <!-- Add more chips if needed -->
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/messageInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@drawable/chat_input_background"
        app:layout_constraintBottom_toTopOf="@+id/disclaimerTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/flowcoach_message_hint"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="4"
            android:background="@android:color/transparent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <ImageButton
            android:id="@+id/sendMessageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_send" 
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/flowcoach_content_desc_send_message"
            app:tint="?attr/colorPrimary" />
    </LinearLayout>

    <TextView
        android:id="@+id/disclaimerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/flowcoach_disclaimer"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>